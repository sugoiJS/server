{
    "clearMocks": true,

    "coverageDirectory": "dist/coverage",

    "transform": {
        "^.+\\.(ts|tsx)?$": "ts-jest"
    },
    "globals":{
        "ts-jest": {
            "skipBabel": true,
            "enableTsDiagnostics": true
        }
    },
    "moduleFileExtensions": [
        "js",
        "ts",
        "json",
        "jsx",
        "node"
    ],


    "testMatch": [
        "**/__tests__/**/?(*.)+(spec|test).js?(x)",
        "**/__tests__/?(*.)+(spec|test).js?(x)",
        "**/?(*.)+(spec|test).js?(x)"
    ],

    "testPathIgnorePatterns": [
        "\\\\node_modules\\\\"
    ]
}
